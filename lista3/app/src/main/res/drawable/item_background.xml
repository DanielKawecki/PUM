<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#DDDDDD" /> <!-- Light beige color -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border (optional) -->
    <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Light gray border -->

    <!-- Padding (optional for spacing inside) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
